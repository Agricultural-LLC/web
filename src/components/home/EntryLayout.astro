---
import type { HomeEntry } from "@/types";
import BaseLayout from "@components/base/BaseLayout.astro";
import CTAButton from "@components/home/CTAButton.astro";
import { markdownify } from "@lib/textConverter";
import { Image } from "astro:assets";

interface Props {
  entry: HomeEntry;
}

const { entry } = Astro.props;
const { image, imageAlt, title, content, button } = entry.data;
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative py-8 md:py-12">
    <!-- Content Container -->
    <div class="container relative z-10">
      <div class="row justify-center">
        <div class="text-center lg:col-8 xl:col-6">
          {/* Logo/Image */}
          {
            image && (
              <div class="mb-4 flex justify-center">
                <div class="relative">
                  <Image
                    class="w-32 h-32 md:w-40 md:h-40 drop-shadow-2xl"
                    src={image}
                    alt={imageAlt}
                    width={160}
                    height={160}
                    loading="eager"
                  />
                  {/* Subtle glow effect */}
                  <div class="absolute inset-0 bg-green-400/10 rounded-full blur-2xl scale-125"></div>
                </div>
              </div>
            )
          }
          
          {/* Main Title */}
          <h1 
            set:html={markdownify(title)} 
            class="mb-6 text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 leading-relaxed intersect:animate-fadeDown opacity-0 intersect-no-queue whitespace-pre-line"
          />
          
          {/* Description */}
          <p 
            set:html={markdownify(content)} 
            class="mb-6 text-lg md:text-xl text-gray-700 leading-relaxed max-w-3xl mx-auto intersect:animate-fadeUp opacity-0 intersect-no-queue whitespace-pre-line"
          />
        </div>
      </div>
    </div>
    
    <!-- Subtle decorative elements -->
    <div class="absolute top-1/4 right-0 w-20 h-20 bg-green-200/10 rounded-full blur-xl"></div>
    <div class="absolute bottom-1/4 left-0 w-16 h-16 bg-blue-200/10 rounded-full blur-lg"></div>
  </section>

  <!-- Features Section -->
  <section class="py-8">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div class="grid md:grid-cols-3 gap-6">
            <!-- Feature 1 -->
            <div class="text-center p-6 rounded-xl bg-white/60 backdrop-blur-sm border border-green-100/50 shadow-lg hover:bg-white/80 transition-all duration-300">
              <div class="w-14 h-14 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">対象作物</h3>
              <p class="text-sm text-gray-600">水稲・小麦・大豆<br>（他、地域要望に応じて）</p>
            </div>

            <!-- Feature 2 -->
            <div class="text-center p-6 rounded-xl bg-white/60 backdrop-blur-sm border border-blue-100/50 shadow-lg hover:bg-white/80 transition-all duration-300">
              <div class="w-14 h-14 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">提供地域</h3>
              <p class="text-sm text-gray-600">北海道<br>（主に空知エリア）</p>
            </div>

            <!-- Feature 3 -->
            <div class="text-center p-6 rounded-xl bg-white/60 backdrop-blur-sm border border-green-100/50 shadow-lg hover:bg-white/80 transition-all duration-300">
              <div class="w-14 h-14 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">提供形態</h3>
              <p class="text-sm text-gray-600">受託（運用伴走）／<br>実証支援研修・人材育成／<br>データ分析・可視化</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Button Section -->
  {
    button && (
      <section class="py-8 text-center">
        <div class="container">
          <div class="row justify-center">
            <div class="lg:col-6">
              <div class="intersect:animate-fadeUp opacity-0 intersect-no-queue">
                <CTAButton
                  label={button.label}
                  link={button.link}
                  newtab
                  size="xlarge"
                />
              </div>
            </div>
          </div>
        </div>
      </section>
    )
  }
</BaseLayout>
