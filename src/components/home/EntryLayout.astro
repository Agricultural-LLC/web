---
import type { HomeEntry } from "@/types";
import BaseLayout from "@components/base/BaseLayout.astro";
import CTAButton from "@components/home/CTAButton.astro";
import { markdownify } from "@lib/textConverter";
import { Image } from "astro:assets";

interface Props {
  entry: HomeEntry;
}

const { entry } = Astro.props;
const { image, imageAlt, title, content, button } = entry.data;
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative py-16 md:py-24">
    <!-- Content Container -->
    <div class="container relative z-10">
      <div class="row justify-center">
        <div class="text-center lg:col-8 xl:col-6">
          {/* Logo/Image */}
          {
            image && (
              <div class="mb-6 flex justify-center">
                <div class="relative">
                  <Image
                    class="w-28 h-28 md:w-36 md:h-36 drop-shadow-2xl"
                    src={image}
                    alt={imageAlt}
                    width={144}
                    height={144}
                    loading="eager"
                  />
                  {/* Subtle glow effect */}
                  <div class="absolute inset-0 bg-green-400/10 rounded-full blur-2xl scale-125"></div>
                </div>
              </div>
            )
          }
          
          {/* Main Title */}
          <h1 
            set:html={markdownify(title)} 
            class="mb-4 text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 leading-tight intersect:animate-fadeDown opacity-0 intersect-no-queue"
          />
          
          {/* Description */}
          <p 
            set:html={markdownify(content)} 
            class="mb-8 text-lg md:text-xl text-gray-700 leading-relaxed max-w-3xl mx-auto intersect:animate-fadeUp opacity-0 intersect-no-queue whitespace-pre-line"
          />
        </div>
      </div>
    </div>
    
    <!-- Subtle decorative elements -->
    <div class="absolute top-1/4 right-0 w-20 h-20 bg-green-200/10 rounded-full blur-xl"></div>
    <div class="absolute bottom-1/4 left-0 w-16 h-16 bg-blue-200/10 rounded-full blur-lg"></div>
  </section>

  <!-- Features Section -->
  <section class="py-16">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div class="grid md:grid-cols-3 gap-6">
            <!-- Feature 1 -->
            <div class="text-center p-6 rounded-xl bg-white/60 backdrop-blur-sm border border-green-100/50 shadow-lg hover:bg-white/80 transition-all duration-300">
              <div class="w-14 h-14 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">人とのつながり</h3>
              <p class="text-sm text-gray-600">農家、JA、行政機関をつなぐプラットフォーム</p>
            </div>

            <!-- Feature 2 -->
            <div class="text-center p-6 rounded-xl bg-white/60 backdrop-blur-sm border border-blue-100/50 shadow-lg hover:bg-white/80 transition-all duration-300">
              <div class="w-14 h-14 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">技術革新</h3>
              <p class="text-sm text-gray-600">最新の農業技術とDXソリューション</p>
            </div>

            <!-- Feature 3 -->
            <div class="text-center p-6 rounded-xl bg-white/60 backdrop-blur-sm border border-green-100/50 shadow-lg hover:bg-white/80 transition-all duration-300">
              <div class="w-14 h-14 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">持続可能な農業</h3>
              <p class="text-sm text-gray-600">環境に配慮した未来志向の農業</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Button Section -->
  {
    button && (
      <section class="py-16 text-center">
        <div class="container">
          <div class="row justify-center">
            <div class="lg:col-6">
              <div class="intersect:animate-fadeUp opacity-0 intersect-no-queue">
                <CTAButton
                  label={button.label}
                  link={button.link}
                  newtab
                  size="xlarge"
                />
              </div>
            </div>
          </div>
        </div>
      </section>
    )
  }
</BaseLayout>
