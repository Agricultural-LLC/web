---
import { lowerHumanize, upperHumanize } from "@lib/textConverter";
import { FaRegFolder, FaHashtag } from "react-icons/fa";
import Button from "@components/common/Button.astro";

interface Props {
  tags: string[];
  categories: string[];
  allCategories: string[];
}

const { tags, categories, allCategories }: Props = Astro.props;
const baseURL = import.meta.env.BASE_URL;
---

<div class="h-full overflow-y-auto">
  <!-- categories -->
  <div class="glass rounded-lg p-4 m-2 mb-4 intersect:animate-fadeLeft opacity-0">
    <div>
      <h4 class="mb-2">
        <a href={`${baseURL}blog/categories/`}>
          <FaRegFolder className={"mr-1 -mt-1.5 inline-block"} />
           カテゴリー
        </a>
      </h4>
      <hr class="mb-2 -mt-1" />
      <ul class="space-y-2">
        {
          categories.map((category) => {
            const count = allCategories.filter((c) => c === category).length;
            return (
              <li>
                <a
                  class="flex justify-between items-center hover:text-primary transition-colors py-1"
                  href={`${baseURL}blog/categories/${category}/`}
                >
                  <span class="truncate mr-2">{upperHumanize(category)}</span>
                  <span class="text-sm text-gray-500 flex-shrink-0">({count})</span>
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>
  <!-- tags -->
  <div class="glass rounded-lg p-4 m-2 intersect:animate-fadeLeft opacity-0">
    <div>
      <h4 class="mb-2">
        <a href={`${baseURL}blog/tags/`}>
          <FaHashtag className={"mr-1 -mt-1.5 inline-block"} />
           タグ
        </a>
      </h4>
      <hr class="mb-2 -mt-1" />
      <div class="flex flex-wrap gap-2">
        {
          tags.map((tag: any) => {
            return (
              <Button
                label={tag}
                link={`${baseURL}blog/tags/${lowerHumanize(tag)}/`}
                type="secondary"
              />
            );
          })
        }
      </div>
    </div>
  </div>
</div>
