---

<section class="py-8" aria-labelledby="home-news-heading">
  <div class="container">
    <div class="row justify-center mb-8">
      <div class="md:col-10 lg:col-8 text-center">
        <h2 id="home-news-heading" class="text-3xl font-bold text-gray-900 mb-4">
          ニュース
        </h2>
        <p class="text-lg text-gray-600">農業DXに関する最新情報をお届けします</p>
      </div>
    </div>

    <div class="row justify-center">
      <div class="lg:col-10">
        <div
          id="home-news-grid"
          class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8"
          aria-busy="true"
        >
          {Array.from({ length: 3 }).map(() => (
            <div class="flex justify-center">
              <div class="w-full max-w-sm animate-pulse rounded-xl border border-purple-100/50 bg-white/60 p-6 backdrop-blur-sm shadow-lg">
                <div class="h-40 w-full rounded-lg bg-gray-200/80 mb-4"></div>
                <div class="flex items-center gap-2 mb-3">
                  <span class="h-6 w-16 rounded-full bg-purple-200/80"></span>
                  <span class="h-6 w-20 rounded-full bg-blue-200/80"></span>
                </div>
                <div class="h-6 w-3/4 rounded bg-gray-200/80 mb-2"></div>
                <div class="h-6 w-2/3 rounded bg-gray-200/60 mb-4"></div>
                <div class="h-4 w-full rounded bg-gray-100/80 mb-1"></div>
                <div class="h-4 w-5/6 rounded bg-gray-100/80"></div>
              </div>
            </div>
          ))}
        </div>

        <div
          id="home-news-empty"
          class="hidden text-center py-12 bg-white/60 backdrop-blur-sm border border-purple-100/50 rounded-xl max-w-2xl mx-auto"
        >
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <p class="text-gray-500 mb-4">まだニュース記事がありません</p>
          <p class="text-sm text-gray-400">新しいニュースが追加されるまでお待ちください</p>
        </div>

        <div class="text-center">
          <a href="/news/" class="btn btn-primary inline-flex items-center gap-2 group">
            すべてのニュースを見る
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="module" define:vars={{ firebaseConfig }}>
  import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
  import { getDatabase, ref, get } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js';

  const firebaseApp = initializeApp(firebaseConfig);
  const database = getDatabase(firebaseApp, firebaseConfig.databaseURL);

  const grid = document.getElementById('home-news-grid');
  const emptyState = document.getElementById('home-news-empty');

  function sortEntries(entries) {
    return entries.sort((a, b) => {
      if ((b.priority || 0) !== (a.priority || 0)) {
        return (b.priority || 0) - (a.priority || 0);
      }
      return new Date(b.date).getTime() - new Date(a.date).getTime();
    });
  }

  function renderEntries(entries) {
    if (!grid) return;
    if (entries.length === 0) {
      grid.classList.add('hidden');
      grid.setAttribute('aria-busy', 'false');
      if (emptyState) emptyState.classList.remove('hidden');
      return;
    }

    const topEntries = entries.slice(0, 3);
    grid.innerHTML = topEntries.map((news) => {
      const href = news.externalLink || `/news/${news.slug || news.id}/`;
      const publishedDate = news.date
        ? new Date(news.date).toLocaleDateString('ja-JP', {
            year: 'numeric',
            month: 'numeric',
            day: 'numeric'
          })
        : '';

      return `
        <div class="flex justify-center">
          <article class="w-full max-w-sm bg-white/60 backdrop-blur-sm border border-purple-100/50 rounded-xl shadow-lg overflow-hidden hover:bg-white/80 transition-all duration-300">
            ${news.image ? `
              <a href="${href}" class="block aspect-video overflow-hidden bg-gray-100">
                <img
                  src="${news.image}"
                  alt="${news.title || ''}"
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-200"
                  loading="lazy"
                />
              </a>
            ` : ''}
            <div class="p-5">
              <div class="flex items-center justify-between mb-3">
                <div class="flex items-center gap-2">
                  ${news.featured ? `
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100/70 text-purple-700">
                      特集
                    </span>` : ''}
                  ${news.categories?.[0] ? `
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100/70 text-blue-700">
                      ${news.categories[0]}
                    </span>` : ''}
                </div>
                ${publishedDate ? `
                  <time class="text-xs text-gray-500" datetime="${news.date}">
                    ${publishedDate}
                  </time>` : ''}
              </div>
              <h3 class="text-base font-bold text-gray-900 mb-2 line-clamp-2">
                <a href="${href}" class="hover:text-purple-600 transition-colors">
                  ${news.title || ''}
                </a>
              </h3>
              ${news.description ? `
                <p class="text-gray-600 text-sm mb-4 line-clamp-2 leading-relaxed">
                  ${news.description}
                </p>` : ''}
              <div class="flex items-center justify-end">
                <a href="${href}" class="text-purple-600 hover:text-purple-800 text-sm font-medium inline-flex items-center gap-1 group">
                  続きを読む
                  <svg class="w-3 h-3 group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        </div>
      `;
    }).join('');

    grid.setAttribute('aria-busy', 'false');
  }

  async function loadFeaturedNews() {
    try {
      const snapshot = await get(ref(database, 'cms/news'));
      if (!snapshot.exists()) {
        renderEntries([]);
        return;
      }

      const rawData = snapshot.val();
      const entries = Object.entries(rawData)
        .map(([id, value]) => {
          if (!value || typeof value !== 'object') return null;
          return { id, ...value };
        })
        .filter((entry) => entry && entry.draft !== true);

      if (!entries.length) {
        renderEntries([]);
        return;
      }

      const sorted = sortEntries(entries);
      const featured = sorted.filter((entry) => entry.featured);
      renderEntries(featured.length ? featured : sorted);
    } catch (error) {
      console.error('Failed to load featured news:', error);
      renderEntries([]);
    }
  }

  loadFeaturedNews();
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
