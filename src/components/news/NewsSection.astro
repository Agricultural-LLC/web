---
import NewsCard from './NewsCard.astro';
import { getFeaturedNewsEntries } from '@lib/newsLoader';

let featuredNews = [];
let error = null;

try {
  featuredNews = await getFeaturedNewsEntries(3);
} catch (e) {
  console.error('Error loading featured news:', e);
  error = e;
  featuredNews = [];
}
---

<section class="py-8">
  <div class="container">
    <div class="row justify-center mb-8">
      <div class="md:col-10 lg:col-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">ニュース</h2>
        <p class="text-lg text-gray-600">農業DXに関する最新情報をお届けします</p>
      </div>
    </div>

    <div class="row justify-center">
      <div class="lg:col-10">
        {error ? (
          <div class="text-center py-12">
            <p class="text-gray-500">ニュースの読み込み中にエラーが発生しました</p>
          </div>
        ) : featuredNews.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            {featuredNews.map((news) => (
              <div class="flex justify-center">
                <div class="w-full max-w-sm">
                  <NewsCard news={news} />
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-12 bg-white/60 backdrop-blur-sm border border-purple-100/50 rounded-xl max-w-2xl mx-auto">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            <p class="text-gray-500 mb-4">まだニュース記事がありません</p>
            <p class="text-sm text-gray-400">新しいニュースが追加されるまでお待ちください</p>
          </div>
        )}

        {featuredNews.length > 0 && (
          <div class="text-center">
            <a href="/news/" class="btn btn-primary inline-flex items-center gap-2 group">
              すべてのニュースを見る
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>