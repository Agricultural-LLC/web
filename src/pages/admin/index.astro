---
import BaseLayout from "@components/base/BaseLayout.astro";
import AdminDashboard from "@components/admin/AdminDashboard";
import { Toaster } from 'react-hot-toast';

const title = "Dashboard - Agricultural CMS";
const description = "Administrative dashboard for Agricultural CMS";
const baseUrl = Astro.site?.toString() || "https://agricultural-llc.web.app";
---

<BaseLayout title={title} description={description}>
  <AdminDashboard client:load baseUrl={baseUrl} />
  <Toaster 
    client:load
    position="top-right"
    toastOptions={{
      duration: 4000,
      style: {
        background: '#363636',
        color: '#fff',
      },
    }}
  />
</BaseLayout>