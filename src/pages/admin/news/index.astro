        alert('ãƒ‹ãƒ¥ãƒ¼ã‚¹ãŒå‰Šé™¤ã•ã‚Œã¾ã—ãŸ');
      } catch (error) {
        console.error('Error deleting post:', error);
        alert('å‰Šé™¤ã«å¤±æ•—ã—ã¾ã—ãŸ: ' + error.message);
      }
    };
  </script>
