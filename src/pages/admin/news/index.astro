            <div class="flex items-center text-xs text-gray-500 space-x-4">
              <span>ğŸ“… ${formatDate(post.date)}</span>
              ${categories && `<span>ğŸ“‚ ${categories}</span>`}
              ${tags && `<span>ğŸ·ï¸ ${tags}</span>`}
              ${post.views ? `<span>ğŸ‘ï¸ ${post.views}å›é–²è¦§</span>` : ''}
              ${post.updatedAt && `<span>ğŸ•’ ${formatDateTime(post.updatedAt)}</span>`}
              ${post.source && `<span>ğŸ“° ${post.source}</span>`}
            </div>
          </div>
          
          <div class="flex items-center space-x-2 ml-4">
            <button 
              onclick="editPost('${post.id}')"
              class="text-purple-600 hover:text-purple-800 text-sm font-medium px-3 py-1 rounded hover:bg-purple-50 transition duration-200"
