---
import BaseLayout from "@components/base/BaseLayout.astro";
import Button from "@components/common/Button.astro";
import CTAButton from "@components/home/CTAButton.astro";
import CaseCard from "@components/common/CaseCard.astro";
import PageHeader from "@components/common/PageHeader.astro";

const baseURL = import.meta.env.BASE_URL;

const cases = [
  {
    category: "実証・地域実装",
    categoryColor: "green",
    title: "ドローン検証事業（2025-）",
    region: "北海道A市",
    technology: "散布ドローン、マルチスペクトル対応ドローン",
    description: "高齢化・担い手不足を背景とした農薬散布体制の再構築。ドローン防除の効率化・安全性向上を目指し、2025年度内の米・麦・大豆・菜種・そば防除への運用トライアルを実施。",
    metric: "• 事業契約・実施計画の策定\n• 初期機材導入の調整着手",
    metricLabel: "成果（現時点）",
    link: "#"
  },
  {
    category: "設計・要件定義",
    categoryColor: "blue",
    title: "農作業履歴アプリ（2025-）",
    region: "空知地域",
    technology: "音声入力、データ分析、栽培計画連動",
    description: "「経験と勘」の見える化不足により、振り返り・改善の精度が上がらない課題を解決。高齢ユーザーにも使いやすい入力負荷の低減を実現。",
    metric: "• 必要機能と入力フローの整理\n• 権限・公開範囲の設計",
    metricLabel: "成果（現時点）",
    link: "#"
  },
  {
    category: "構想・合意形成",
    categoryColor: "orange",
    title: "スマートアグリシティ構想支援（2025-）",
    region: "北海道A市",
    technology: "ドローン、IoT、データ連携",
    description: "ドローン・IoT・データ連携を横断した地域DXフレームの検討。高校と連携したドローン国家資格（2等）取得の枠組みづくりを推進。",
    metric: "• 参画候補間の合意形成プロセス設計",
    metricLabel: "成果（現時点）",
    link: "#"
  },
  {
    category: "研修・人材育成",
    categoryColor: "purple",
    title: "農業ドローン人材育成：ライセンス講習・運用設計（2025-）",
    region: "北海道",
    technology: "ドローン講習、評価・認定プロセス",
    description: "地域人材（学生・社会人・農家）を対象に操縦者育成〜運用者育成までを一気通貫で設計。10名規模／回の講習枠設計で地域内シェアリング運用の土台づくり。",
    metric: "• 10名規模／回の講習枠設計\n• 評価・認定プロセスの整備",
    metricLabel: "成果（現時点）",
    link: "#"
  },
  {
    category: "事業運営・伴走",
    categoryColor: "indigo",
    title: "スマート農業・農業支援サービス事業導入 総合サポート（2025-2026）",
    region: "北海道",
    technology: "ドローン散布、リモートセンシング、データ分析",
    description: "事業計画・体制構築・予算管理・KPI設計を主幹として実施。ドローン散布とリモートセンシングの実装支援、利用者向け研修の企画・実施を担当。",
    metric: "• 2025年度は限定運用＋実証で効果を検証\n• 来期の営農計画・KPI設計に反映",
    metricLabel: "成果（現時点）",
    link: "#"
  },
  {
    category: "研究・協業",
    categoryColor: "pink",
    title: "データ連携基盤：農地CIM/BIM × 営農データ（2025-）",
    region: "北海道",
    technology: "点群/DEM/CIM-BIM、RTK/PPK測位、自動航行",
    description: "土木測量パートナーと協業し、土木×農業のデジタルデータ連携基盤の実現に向けて検討。再測量の抑制、安全性向上、年次比較の正確性を目指す。",
    metric: "• 既存データの棚卸し\n• PoC設計\n• ガイドライン素案作成",
    metricLabel: "成果（現時点）",
    link: "#"
  }
